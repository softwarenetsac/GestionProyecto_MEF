
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Gestion_Rendimiento_Frontend.Recursos.Forms;





<script type="text/javascript">

    ns('SoftwareNet.Web.Forms.Mantenimiento.Resources');
    SoftwareNet.Web.Forms.Mantenimiento.Resources.EtiquetaTitulo='@Html.Raw(Estado.EtiquetaRegistro)';
</script>
<div class="wizard-container">
    <div class="card wizard-card ct-wizard-red" id="wizard">


        <div class="wizard-header">
            <div class="row m-x-sm">
                <div class="col-md-4">
                    <h4 class="m-t-sm">Configurar Planificación</h4>
                </div>
            </div>
        </div>

        <div class="bg-divider"></div>

        <div class="card-body">
            <div class="row" style="margin-top:6px;">
                <div class="col-md-4">
                    <button type="button" class="btn btn-primary" id="btnAgregar">Agregar</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table id="gridMantenimiento" class="table table-bordered table-striped dataTable">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



@section Modales{

    <div id="modalMantenimiento" role="dialog" class="modal fade" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary" style="cursor:pointer;">Configuración </div>
                <div class="modal-body">
                    <form id="frmModel" name="frmModel" data-toggle="validator" method="post" enctype="multipart/form-data">
                        <input type="hidden" id="hdnId" name="hdnId" value="0" />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Título<span class="text-primary m-l-sm">(*)</span></label>
                                    <select class="form-control" name="ID_CONFIGURACION" id="ID_CONFIGURACION"> </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Descripción<span class="text-primary m-l-sm">(*)</span></label>
                                    <div class="compose">
                                        <div class="compose-body">
                                            <div class="compose-message">
                                                <div class="compose-editor" id="txtNombre"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label> <span class="text-primary m-l-sm">(*) Campo obligatoro</span></label>
                            </div>
                        </div>


                    </form>

                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="m-t-lg text-center">
                            <button id="btnGuardar" name="btnGuardar" class="btn btn-primary" type="button">Guardar</button>
                            <button class="btn btn-default m-l-lg" data-dismiss="modal" type="button">Cancelar</button>
                        </div>
                    </div>

                </div>
                <!--<div class="modal-footer"></div>-->
            </div>
        </div>
    </div>

    <div class="contenedoralerta"> </div>
    <div class="contenedorconfirmacion"></div>

}

@section Scripts
{
    <script type="text/javascript">

        ns('SoftwareNet.Web.Operacion.Mantenimiento.Actions')
        SoftwareNet.Web.Operacion.Mantenimiento.Actions.Inicio = '@Url.Action("Index", "ConfiguracionRendimiento")';
        SoftwareNet.Web.Operacion.Mantenimiento.Actions.Registrar = '@Url.Action("Procesar", "ConfiguracionRendimiento")';
        SoftwareNet.Web.Operacion.Mantenimiento.Actions.Buscar = '@Url.Action("GetAll", "ConfiguracionRendimiento")';
        SoftwareNet.Web.Operacion.Mantenimiento.Actions.Eliminar = '@Url.Action("Anular", "ConfiguracionRendimiento")';
    </script>

    <link  rel="stylesheet" type="text/css" href="@Url.Content("~/css/compose.min.css")" />
    <script  src="@Url.Content("~/js/compose.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/CodeCustom/configuracion/Controller.js?id=3.3")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/CodeCustom/configuracion/Index.js?id=23")"></script>



}

